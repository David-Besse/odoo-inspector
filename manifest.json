{
  "manifest_version": 3,
  "name": "Odoo Inspector",
  "version": "1.0.0",
  "description": "A helper for Odoo developers with debug mode management and useful tools",
  "author": "David B.",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/icons/icon16.png",
      "48": "img/icons/icon48.png",
      "128": "img/icons/icon128.png"
    },
    "default_title": "Odoo Inspector"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "icons": {
    "16": "img/icons/icon16.png",
    "48": "img/icons/icon48.png",
    "128": "img/icons/icon128.png"
  },
  "web_accessible_resources": [{
    "resources": [
      "img/icons/*.png"
    ],
    "matches": ["<all_urls>"]
  }]
} 